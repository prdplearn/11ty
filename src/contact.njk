<main>

    <section class="breadcrum-wrapper">
        <img src="../assets/images/bread.png" class="w-100 img-fluid" />
        <div class="container">
            <div class="caption">
                <h1>Contact</h1>
            </div>
        </div>
    </section>

   <section class="contact_wrapper">
<div class="container py-5 custom-contact-section">
        <h1 class="display-4 fw-bold custom-heading mb-3">Get in Touch</h1>
        <p class="lead text-muted mb-5 custom-subtext">
            Lorem ipsum dolor sit amet consectetur. Maecenas posuere fusce neque porta tempor donec.
        </p>

        <div class="row">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <form>
                    <div class="mb-4">
                        <label for="yourName" class="form-label custom-form-label">Your name*</label>
                        <input type="text" class="form-control custom-form-control" id="yourName" placeholder="Enter your full name">
                    </div>
                    <div class="mb-4">
                        <label for="phoneNumber" class="form-label custom-form-label">Phone number*</label>
                        <input type="tel" class="form-control custom-form-control" id="phoneNumber" placeholder="Enter your full name">
                    </div>
                    <div class="mb-4">
                        <label for="yourEmail" class="form-label custom-form-label">Your email*</label>
                        <input type="email" class="form-control custom-form-control" id="yourEmail" placeholder="Enter your email address">
                    </div>
                    <div class="mb-5">
                        <label for="message" class="form-label custom-form-label">Message</label>
                        <textarea class="form-control custom-form-control custom-textarea" id="message" rows="6" placeholder="Write your message"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary custom-submit-btn">Send Message</button>
                </form>
            </div>

            <div class="col-lg-6 ps-lg-5">
                <div class="d-flex align-items-center mb-4">
                    <i class="fas fa-phone-alt custom-icon me-3"></i>
                    <span class="custom-contact-info">123-456-7890</span>
                </div>
                <div class="d-flex align-items-center mb-4">
                    <i class="fas fa-envelope custom-icon me-3"></i>
                    <span class="custom-contact-info">info@bluestarinnovationpartners.com</span>
                </div>
                <div class="d-flex align-items-start mb-4">
                    <i class="fas fa-map-marker-alt  custom-icon me-3 mt-2"></i>
                    <div class="custom-contact-info">
                        One Cowboys Way<br>
                        Suite 190<br>
                        Frisco, Texas 75034
                    </div>
                </div>
            </div>
        </div>
    </div>
    </section>



</main>